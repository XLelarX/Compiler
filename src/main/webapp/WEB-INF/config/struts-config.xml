<?xml version="1.0" encoding="windows-1251"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans>
        <form-bean name="CompilerForm" type="compiler.lelar.compiler.CompilerForm"/>
    </form-beans>
    <action-mappings>
        <action path="/compiler"
                type="compiler.lelar.compiler.CompilerAction"
                name="CompilerForm"
                validate="false">
            <forward name="Start" path="/WEB-INF/jsp/compiler.jsp"/>
        </action>
    </action-mappings>
    <message-resources key="compilerBundle" parameter="compiler.lelar.compiler.resources"/>
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config" value="/WEB-INF/config/tiles-definitions.xml"/>
    </plug-in>
</struts-config>